#!/bin/bash

workingdir="$(dirname $(readlink -f $0))/"

if [ "$1" != "" ]; then
	python3 "$workingdir"dict.py "$1" "$workingdir"
else
	printf "Enter q to quit\n\n"
	read -p "Enter chinese word to translate: " searchword && if [ $searchword == "q" ]; then exit; fi
	python3 "$workingdir"dict.py  "$searchword" "$workingdir"
	while true; do
		read -p "Word: " searchword && if [ $searchword == "q" ]; then exit; fi
		python3 "$workingdir"dict.py  "$searchword" "$workingdir"
	done
fi
